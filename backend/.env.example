# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
PG_HOST=localhost
PG_PORT=5432
PG_USER=your_postgres_user
PG_PASS=your_postgres_password
PG_DB=your_database_name

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_EXPIRES_IN=7d
JWT_ACCESS_EXPIRY=3600
JWT_REFRESH_EXPIRY=2592000

# Stripe API Keys (Get these from your Stripe dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Google OAuth Configuration (Get these from Google Cloud Console)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id_here
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id_here
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration (Add your frontend URLs here)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,exp://192.168.1.100:8081,http://localhost:19006,exp://localhost:19000
